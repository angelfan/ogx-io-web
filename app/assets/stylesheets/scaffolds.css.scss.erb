body {
    background: url(<%= asset_data_uri 'seamless_paper_texture.png' %>);
    color: #555;
    font-family: verdana, arial, helvetica, STHeiti, simsun, "WenQuanYi Micro Hei", sans-serif;
    font-size: 13px;
    line-height: 22px;
}

p, ol, ul, td {
    line-height: 18px;
}

pre {
    background-color: #eee;
    padding: 10px;
    font-size: 13px;
}

h2, h3, h4 {
    font-weight: bold;
    color: #333;
}

div {
    &.field, &.actions {
        margin-bottom: 10px;
    }
}

#notice {
    color: green;
}

.field_with_errors {
    input {
        border-color: red;
    }
}

#error_explanation {
    width: 450px;
    border: 2px solid red;
    padding: 7px;
    padding-bottom: 0;
    margin-bottom: 20px;
    background-color: #f0f0f0;
    h2 {
        text-align: left;
        font-weight: bold;
        padding: 5px 5px 5px 15px;
        font-size: 12px;
        margin: -7px;
        margin-bottom: 0px;
        background-color: #c00;
        color: #fff;
    }
    ul li {
        font-size: 12px;
        list-style: square;
    }
}

.no-margin {
    margin: 0;
}

.m10 {
    margin: 10px;
}

.ml10 {
    margin-left: 10px;
}

.mb10 {
    margin-bottom: 10px;
}

.mb20 {
    margin-bottom: 20px;
}

.mt10 {
    margin-top: 10px;
}

.mt20 {
    margin-top: 20px;
}

.p0 {
    padding: 0;
}

.p10 {
    padding: 10px;
}

.fs13 {
    font-size: 13px;
}

.fs14 {
    font-size: 13px;
}

.list-item {
    .panel-body {
        padding: 10px;
        color: #666;
    }
    .panel-footer {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 5px;
        padding-bottom: 5px;
        font-size: 12px;
        color: #BBB;
        span, a {
            color: #999;
        }
        ul {
            margin: 0;
            font-size: 12px;
        }
    }
    .list-detail {
        margin-left: 80px;
    }
    .list-detail-body {
        margin-top: 5px;
        line-height: 25px;
    }
}

.post-item {
    margin-top: 15px;
    margin-bottom: 15px;
    .panel-body {
        padding: 0;
    }
    $post-item-padding: 13px;
    .avatar {
        margin: $post-item-padding;
        @media (max-width: 768px) {
            display: none;
        }
    }
    .post-detail {
        @media (min-width: 768px) {
            margin-left: 70px + $post-item-padding * 2;
            padding: $post-item-padding;
            border-left: dotted #DDD 1px;
        }
        @media (max-width: 768px) {
            padding: $post-item-padding * 0.8;
        }
        .floor {
            color: #999;
            font-size: 16px;
            font-weight: bold;
            margin-top: -3px;
            margin-right: -1px;
        }
        h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #333;
        }
        .post-author {
            color: #999;
            margin-bottom: 5px;
        }
        .post-content {
            font-size: 14px;
            line-height: 25px;
            min-height: 28px;
            p, ol, ul {
                line-height: 25px;
            }
            p {
                margin-bottom: 12px;
            }
        }
        .post-footer {
            margin-top: 7px;
            color: #BBB;
            ul {
                margin-bottom: 0;
                li {
                    padding-right: 5px;
                    padding-left: 5px;
                }
            }
        }
    }
}

.latest-posts {
    .title {
        margin-bottom: 20px;
        font-size: 16px;
    }
    .latest-post-item {
        .post-content {
            margin-left: 60px;
            h4 {
                margin-bottom: 7px;
                a {
                    color: #333;
                }
            }
            .post-body {
                margin-bottom: 2px;
            }
            .post-info {
                color: #999;
                font-size: 12px;
            }
        }
        border-bottom: dashed #CCC 1px;
        padding-bottom: 10px;
    }
}

.topic-head {
    h3 {
        margin-top: 0;
        margin-bottom: 15px;
    }
}

.list-bar {
    margin-bottom: 5px;
    background-color: #EEE;
    padding: 8px 10px;
    border-radius: 3px;
    .post-links {
        a {
            margin-left: 10px;
        }
    }
    .pagination {
        margin-right: 10px;
        margin-left: 10px;
        span {
            margin-right: 2px;
        }
    }
}

.list-content {
    padding-top: 10px;
}

.topic-bar {
    @extend .list-bar
}

.topic-list {
    tbody > tr > td {
        border-top: 0px;
        border-bottom: 1px solid #DDD;
    }
    .topic-mark {
        padding-right: 0;
    }
}

.elite-mark {
    color: red;
    font-size: 12px;
    font-weight: bold;
}

.deleted-mark {
    color: gray;
    font-size: 12px;
}

.board-content {
    padding-top: 10px;
}

.register-user {
    .panel {
        width: 450px;
        margin-top: 60px;
        margin-left: auto;
        margin-right: auto;
    }
}

.user-profile {
    .nick {
        margin-top: 10px;
        font-size: 20px;
        font-weight: bold;
    }
    .name {
        color: #999;
        font-weight: normal;
        margin-bottom: 10px;
    }
    .intro {
        margin-bottom: 15px;
    }
    .others {
        .glyphicon {
            color: #CCC;
        }
        p {
            margin-bottom: 5px;
        }
    }
}

.head-main-nav {
    font-weight: bold;
    font-size: 14px;
}

.head-user-nav {
    li > a {
        padding-left: 0;
        padding-right: 0;
        margin-right: 15px;
    }
}

.user-link {
    font-size: 13px;
}

.post-title {
    color: #999;
    @media (min-width: 992px) {
        div {
            margin: 0;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            @media (min-width: 992px) {
                max-width: 422px;
            }
            @media (min-width: 1200px) {
                max-width: 572px;
            }
        }
    }
    .digest {
        @media (max-width: 992px) {
            display: none;
        }
    }
    a {
        font-size: 14px;
    }
}

.board-title {
    @extend .post-title;
    a {
        font-size: 16px;
    }
}

.board-head {
    margin-bottom: 10px;
}

.board-intro {
    ul {
        margin-bottom: 5px;
    }
    .intro-content {
        margin-bottom: 15px;
    }
}

.topic-title {
    a {
        font-size: 14px;
    }
}

.new-post {
    h4 {
        margin-bottom: 20px;
    }
}

.left-side-layout {
    margin-top: 15px;
    margin-left: -15px;
    .panel-body {
        padding: 10px;
    }
    .login-tips {
        .nick a {
            color: #333;
            font-size: 16px;
            font-weight: bold;
        }
        .name {
            color: #999;
        }
    }
    ul.board-list {
        background-color: #EEE;
        padding: 10px 15px;
        list-style: none;
        li.title {
            font-weight: bold;
        }
        li {
            margin-bottom: 10px;
        }
        li:last-child {
            margin-bottom: 2px;
        }
    }
}

.right-side-layout {
    margin-top: 15px;
    @media (min-width: 768px) {
        border-left: dotted #EEE 1px;
    }
    @media (max-width: 768px) {
        padding: 0;
    }
}