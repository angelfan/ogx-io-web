<tr id="user-<%= user.id %>">
  <td><%= user.id %></td>
  <td><%= avatar user, 40 %></td>
  <td><%= user.name %></td>
  <td><%= user_link user %></td>
  <td>
    <%= user.email %>
    <br/>
    <% if user.confirmed_at %>
        <%= time_digest user.confirmed_at %> <%= t('admin.users.confirmed_user') %>
    <% else %>
        <%= t('admin.users.uncomfirmed_user') %>
    <% end %>
  </td>
  <td><%= user.sign_in_count %></td>
  <td><%= user.last_sign_in_ip %><br/><%= time_digest user.last_sign_in_at if user.last_sign_in_at %></td>
  <td><%= user.last_visit_ip %><br/><%= time_digest user.last_visited_at if user.last_visited_at %></td>
  <td><%= user.role %></td>
  <td>
    <%= link_to_unless user.status == 0, t('action.resume'), admin_user_path(user, 'user[status]' => 0), method: :patch, remote: true %>
    <%= link_to_unless user.status == 1, t('action.block'), admin_user_path(user, 'user[status]' => 1), method: :patch, remote: true %>
    <%= link_to_unless user.status == 2, t('action.delete'), admin_user_path(user, 'user[status]' => 2), method: :patch, remote: true %>
  </td>
</tr>