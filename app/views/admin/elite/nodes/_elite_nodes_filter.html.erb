<div class="elite-filter-list">
  <%= t('global.status') %>: <div class="btn-group">
    <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
      <%= params[:status].blank? ? t('global.status_values.all') : [t('global.status_values.normal'), t('global.status_values.deleted')][params[:status].to_i - 1] %>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to t('global.status_values.all'), request.url.split('?')[0] + "?parent_id=#{params[:parent_id]}" %></li>
      <li><%= link_to t('global.status_values.normal'), request.url.split('?')[0] + "?parent_id=#{params[:parent_id]}&status=1" %></li>
      <li><%= link_to t('global.status_values.deleted'), request.url.split('?')[0] + "?parent_id=#{params[:parent_id]}&status=2" %></li>
    </ul>
  </div>
  <%= render partial: 'breadcrumbs', locals: {node: @parent} %>
</div>