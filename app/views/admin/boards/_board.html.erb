<tr id="node-<%= board.id %>">
  <td><%= board.id %></td>
  <td><%= board._type %></td>
  <td><%= link_to board.name, board_path(board) %></td>
  <td><%= board.path %></td>
  <td>
    <% board.moderators.each do |moderator| %>
        <%= user_link moderator %>
    <% end %>
  </td>
  <td><%= board.status %></td>
  <td><%= board.layer %></td>
  <td><%= board.order %></td>
  <td>
    <%= link_to '编辑', edit_admin_board_path(board) %>
    <%= link_to '上升', order_up_admin_node_path(board.id), method: :patch %>
    <%= link_to '下降', order_down_admin_node_path(board.id), method: :patch %>
    <%= link_to_unless board.normal?, '恢复', admin_board_path(board, 'board[status]' => 'normal'), method: :patch, remote: true %>
    <%= link_to_unless board.blocked?, '封禁', admin_board_path(board, 'board[status]' => 'blocked'), method: :patch, remote: true %>
    <%= link_to_unless board.deleted?, '删除', admin_board_path(board, 'board[status]' => 'deleted'), method: :patch, remote: true %>
  </td>
</tr>