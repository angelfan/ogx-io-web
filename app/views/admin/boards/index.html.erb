<%= render partial: 'admin/common/admin_nav', locals: {index: 4} %>
<%= render 'boards_paginate_bar' %>
<table class="table table-hover">
  <thead>
  <th>id</th>
  <th>版面名称</th>
  <th>版面路径</th>
  <th>版主</th>
  <th>状态</th>
  <th>更新时间</th>
  <th>操作</th>
  </thead>
  <tbody>
  <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= link_to board.name, show_board_path(board.path) %></td>
        <td><%= link_to board.path, show_board_path(board.path) %></td>
        <td>
          <% board.moderators.each do |moderator| %>
              <%= user_link moderator %>
          <% end %>
        </td>
        <td><%= board.status %></td>
        <td><%= time_digest board.updated_at %></td>
        <td class="fs13">
          <%= link_to '编辑', edit_admin_board_path(board) %>
          <% if board.normal? %>
              <%= link_to '封禁', admin_board_path(board, 'board[status]' => 'blocked'), method: :patch %>
              <%= link_to '删除', admin_board_path(board, 'board[status]' => 'deleted'), method: :patch %>
          <% else %>
              <%= link_to '恢复', admin_board_path(board, 'board[status]' => 'normal'), method: :patch %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= render 'boards_paginate_bar' %>

