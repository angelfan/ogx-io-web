<td class="avatar"><%= avatar mentionable.user, 40 %></td>
<td class="content">
  <div class="title">
    <%= t('notifications._mention._comment.title', mention_user: user_link(mentionable.user), post: link_to(mentionable.commentable.title, show_post_path(mentionable.commentable.sid) + "#comment-#{mentionable.id}")).html_safe %>
    <% if !notification.read %>
        <span class="new-item-tip"><%= t('notifications.new_notification') %></span>
    <% end %>
  </div>
  <div class="details"><%= mentionable.body %></div>
</td>