<td class="avatar"><%= avatar notification.post.author, 40 %></td>
<td class="content">
  <div class="title">
    <%= t('notifications._post_reply.title', post_author: user_link(notification.post.author), my_post: link_to(notification.post.parent.title, show_post_path(notification.post.parent.sid))).html_safe %>
    <% if !notification.read %>
        <span class="new-item-tip"><%= t('notifications.new_notification') %></span>
    <% end %>
  </div>
  <div class="details"><%= link_to notification.post.title, show_post_path(notification.post.sid) %></div>
</td>