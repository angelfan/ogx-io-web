<% content_for :title do %>
    <%= t('views.users.sign_in') %>
<% end %>

<% content_for :left_side do %>
    &nbsp;
<% end %>

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {role: 'form'}) do |f| %>
    <h3><%= t('views.users.sign_in') %></h3>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to t('views.users.sign_up'), new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :name, t('views.users.user_name') %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to t('views.users.forgot_password'), new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password, t('views.users.password') %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %><%= f.label :remember_me, t('views.users.remember_me') %>
        </div>
      <% end -%>
      <%= f.submit t('views.action.sign_in'), :class => 'button right' %>
  <% end %>
</div>
