<div class="row">
  <div class="col-sm-9 latest-posts">
    <h4 class="title">最新帖子</h4>
    <% @posts.each do |post| %>
    <div class="post-item">
      <div class="author-avatar pull-left">
        <%= avatar post.author, 50 %>
      </div>
      <div class="post-content">
        <h4><%= link_to post.title, post %></h4>
        <div class="post-body"><%= truncate post.body, length: 100, omission: '...' %></div>
        <div class="post-info"><%= user_link post.author %> 发表在 <%= link_to post.board.name, board_topics_path(post.board) %> - <%= link_to post.topic.title, topic_path(post.topic) %> · <%= time_digest post.created_at %></div>
      </div>
    </div>
    <% end %>
  </div>
</div>

