<div class="col-sm-9 latest-posts right-side-layout">
  <div class="title">最新帖子</div>
  <% @posts.each do |post| %>
      <div class="post-item">
        <div class="author-avatar pull-left">
          <%= avatar post.author, 50 %>
        </div>
        <div class="post-content">
          <h4><%= link_to post.title, show_post_path(post.sid) %></h4>

          <div class="post-body"><%= truncate post.body, length: 100, omission: '...' %></div>
          <div class="post-info"><%= user_link post.author %>
            发表在 <%= link_to post.board.name, show_board_path(post.board.path) %>
            - <%= link_to post.topic.title, show_topic_path(post.topic.sid) %>
            · <%= time_digest post.created_at %></div>
        </div>
      </div>
  <% end %>
</div>

