<% if @comment.errors.any? %>
alert('<%= @comment.errors[:body][0] %>')
<% else %>
$('#comment-for-<%= @comment.commentable_type %>-<%= @comment.commentable_id %>').find('ul#comment-0').append("<%= j render partial: 'comments/simple_comment', locals: {comment: @comment} %>")
$('ul#comment-0').parent().children('.form-wrapper').find('#comment_body').val('').trigger("keyup").trigger("autosize.resize");
$('li#comment-<%= @comment.id %>').find("abbr.timeago").timeago()
<% end %>
