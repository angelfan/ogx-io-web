<% if @comment.errors.any? %>
alert('<%= @comment.errors[:body][0] %>')
<% else %>
$('#comment-for-<%= @comment.commentable_type %>-<%= @comment.commentable_id %>').find('ul#comment-<%= @comment.parent_id %>').append("<%= j render partial: 'comments/simple_comment', locals: {comment: @comment} %>")
$('ul#comment-<%= @comment.reply_to_id %>').parent().children('.form-wrapper').find('#comment_body').val('').trigger("keyup").trigger("autosize.resize");
<% end %>
