<li id="comment-<%= comment.id %>" class="comment-item">
  <div class="avatar pull-left">
    <%= avatar comment.user, 40 %>
  </div>
  <div class="details clearfix">
    <div class="author-time">
      <span class="author"><%= full_user_link comment.user %></span>
      Â·
      <span class="time"><%= time_digest comment.created_at %></span>
    </div>
    <div class="content-wrapper">
      <%= render partial: "comments/comment_content", locals: {comment: comment} %>
      <%= render partial: '/comments/form', locals: {comment: Comment.new_from_parent(comment), hidden: true} %>
    </div>
    <ul id="comment-<%= comment.id %>" class="child-list">
    </ul>
  </div>
</li>
