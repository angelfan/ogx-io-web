<li id="comment-<%= comment.id %>" data-comment-id="<%= comment.id %>" class="comment-item">
  <div class="avatar pull-left">
    <%= avatar comment.user, 40 %>
  </div>
  <div class="details clearfix">
    <div class="author-time">
      <span class="author"><%= full_user_link comment.user %></span>
      ·
      <span class="time"><%= time_digest comment.created_at %></span>
    </div>
    <div class="content">
      <%= comment.body %>
    </div>
    <div class="actions">
      <a class="reply-comment" href="javascript:;">回复</a>
      <%= link_to '删除', comment, method: :delete, remote: true %>
    </div>
    <ul id="comment-<%= comment.id %>" class="child-list">
    </ul>
  </div>
</li>
