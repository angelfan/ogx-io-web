<div class="row">
  <ol class="breadcrumb pull-left">
    <li><%= link_to 'boards', boards_path %></li>
    <li><%= link_to @board.path, board_topics_path(@board) %></li>
    <li>topics</li>
  </ol>
</div>

<div class="row">
  <%= render 'boards/board_head' %>
  <div class="col-sm-9">
    <%= render 'boards/board_intro' %>
    <%= render partial: 'boards/board_nav', locals: {index: 1} %>
    <div class="board-content">
    <%= render 'topics_paginate_bar' %>
    <table class="topic-list table table-hover">
      <thead>
        <th class="topic-mark" style="width: 20px"></th>
        <th>主题</th>
        <th class="text-center" style="width: 120px">发起人</th>
        <th class="text-center" style="width: 80px">回应</th>
        <th class="text-center" style="width: 100px">最后回复</th>
      </thead>
      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td class="topic-mark">
              <% if topic.top == 1 %>
                <i class="glyphicon glyphicon-circle-arrow-up" style="color: red"></i>
              <% else %>
                <i class="glyphicon glyphicon-circle-arrow-right" style="color: green"></i>
              <% end %>
            </td>
            <td class="topic-title">
              <%= link_to topic.title, topic_path(topic) %>
            </td>
            <td class="text-center"><%= link_to topic.posts.first.author.name, topic.posts.first.author %></td>
            <% count = topic.posts.first.is_deleted? ? topic.posts.normal.count : topic.posts.normal.count - 1 %>
            <td class="text-center"><%= count > 0 ? count : '' %></td>
            <td class="text-right"><%= topic.replied_at.strftime('%F') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'topics_paginate_bar' %>
    </div>
  </div>
  <div class="col-sm-2">

  </div>
</div>

