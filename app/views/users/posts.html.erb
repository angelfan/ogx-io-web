<div class="user-profile">
  <%= render 'profile_left' %>
  <div class="content col-sm-9">
    <%= render partial: 'profile_nav', locals: {index: index} %>
    <div class="list-content">
      <%= render 'posts_paginate_bar' %>
      <table class="table table-hover">
        <thead>
        <th>文章</th>
        <th class="text-center" style="width: 160px">所在版面</th>
        <th class="text-center" style="width: 110px">发表时间</th>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post.title, post_path(post) %>
                <% if post.elite == 1 && index != 3 %>
                    <i class="elite-mark">精</i>
                <% end %>
                <br/>
                <%= truncate post.body, length: 42, omission: '...' %>
              </td>
              <td class="text-center"><%= link_to post.board.name, board_topics_path(post.board) %></td>
              <td class="text-center"><%= time_digest post.created_at %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= render 'posts_paginate_bar' %>
    </div>
  </div>
</div>