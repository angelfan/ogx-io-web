<tr>
  <td class="title"><%= link_to category.name, pretty_path_for_node(category) %></td>
  <td class="details">
    <% if category.children.normal.categories.count > 0 %>
        <div class="category-list">
          <% category.children.normal.categories.order_by(order: -1, name: 1).each do |c| %>
              <%= link_to c.name, pretty_path_for_node(c) %>
          <% end %>
        </div>
    <% end %>
    <div class="board-list">
      <% category.children.normal.boards.order_by(order: -1, name: 1).each do |b| %>
          <%= link_to b.name, pretty_path_for_node(b) %>
      <% end %>
    </div>
  </td>
</tr>