<% cache [post] do %>
    <tr>
      <td class="top-mark"><span><%= t('global.top_post') %></span></td>
      <td class="top-title"><%= link_to post.title, post_path(post) %></td>
      <td class="author hidden-xs"><%= user_link post.author %></td>
      <td class="date hidden-xs"><%= time_date post.created_at %></td>
    </tr>
<% end %>