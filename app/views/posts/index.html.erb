<div class="col-sm-10 right-side-layout">
  <%= render partial: 'nodes/breadcrumbs', locals: {node: @board, extras: ['posts']} %>
  <div class="board-main">
    <%= render partial: 'boards/board_head', locals: {board: @board} %>
    <%= render partial: 'boards/board_intro', locals: {board: @board} %>
    <%= render partial: 'boards/board_nav', locals: {board: @board, index: 2} %>
    <div class="post-list">
      <table class="table table-hover">
        <tbody>
        <%= render partial: "posts/post_list_item", as: :post, collection: @posts %>
        </tbody>
      </table>
    </div>
    <div class="board-pagination">
      <%= paginate @posts, left: 1, right: 1, :theme => 'bootstrap3' %>
    </div>
  </div>
  <%= render partial: 'boards/board_right_side', locals: {board: @board} %>
</div>

