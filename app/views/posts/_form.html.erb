<%= form_for(@board ? [@board, @post] : @post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label '标题' %>
      <%= f.text_field :title, class: 'form-control', value: @parent ? 'Re: ' + @parent.title : '' %>
    </div>
    <div class="form-group">
      <%= f.label '内容' %>
      <%= f.text_area :body, class: 'form-control', rows: 20 %>
    </div>
    <% if @parent %>
      <%= f.hidden_field :parent, value: @parent.id %>
      <%= f.hidden_field :topic_id, value: @parent.topic.id %>
    <% end %>

  <div class="actions clearfix">
    <%= f.submit '发表', class: 'btn btn-primary' %>
  </div>
<% end %>
