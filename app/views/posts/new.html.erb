    <li>发表文章</li>
  </ol>
  <%= link_to '申请新版', new_board_path, class: 'breadcrumb pull-right' %>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="clearfix mb10">
      <% if @parent %>
        <h4 class="no-margin mb10 pull-left">回复 <%= link_to @parent.title, @parent %></h4>
      <% else %>
        <h4 class="no-margin mb10 pull-left">新建主题</h4>
      <% end %>
    </div>
  </div>
  <div class="col-sm-8">
    <%= render 'form' %>
  </div>
  <div class="col-sm-4">

  </div>
</div>

