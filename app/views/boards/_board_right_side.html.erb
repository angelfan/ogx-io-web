<div class="hidden-sm hidden-xs board-right-side">
  <div class="panel panel-default board-intro">
    <div class="panel-heading">
      <% if board.moderators.count > 0 %>
          <%= t('global.moderator') %>:
          <ul class="list-inline" style="display: inline-block">
            <% board.moderators.each do |user| %>
                <li><%= user_link user %></li>
            <% end %></ul>
      <% else %>
          <%= t('views.boards.recruiting_moderator') %>
      <% end %>
    </div>
    <% unless board.intro.blank? %>
        <div class="panel-body">
          <%= board.intro %>
        </div>
    <% end %>
    <% if user_signed_in? %>
        <div class="actions center">
          <% if current_user.collecting_boards.include?(board) %>
              <%= link_to t('views.boards.action.uncollect'), uncollect_board_user_path(current_user, board_id: board.id), method: :patch %>
          <% else %>
              <%= link_to t('views.boards.action.collect'), collect_board_user_path(current_user, board_id: board.id), method: :patch %>
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="panel panel-default board-statistic">
    <div class="panel-heading">
      <%= t('views.boards.board_statistic') %>
    </div>
    <div class="panel-body">
      <p><%= t('global.count.topic') %>: <%= board.topics.normal.count %></p>
      <p><%= t('global.count.post') %>: <%= board.posts.normal.count %></p>
    </div>
  </div>
</div>