<div class="row">
  <ol class="breadcrumb pull-left">
    <li>boards</li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="clearfix">
      <h2 class="no-margin mb10 pull-left">版面列表</h2>
    </div>
  </div>
  <div class="col-sm-10">
    <table class="table table-hover">
      <thead>
      <th>板面</th>
      <th class="text-center" style="width: 100px;">路径</th>
      <th class="text-center" style="width: 130px;">版主</th>
      <th class="text-center" style="width: 50px;">主题</th>
      <th class="text-center" style="width: 50px;">帖子</th>
      <th class="text-center" style="width: 110px;">创建时间</th>
      </thead>
      <tbody>
      <% @boards.each do |board| %>
          <tr>
            <td class="board-title" title="<%= board.intro %>">
              <div><%= link_to board.name, board_topics_path(board) %></div>
              <div><%= truncate board.intro, length: 100, omission: '...' %></div>
            </td>
            <td class="text-center fs13"><%= link_to board.path, board_topics_path(board) %></td>
            <td class="text-center">
              <ul class="list-inline">
                <% board.moderators.each do |user| %>
                    <li><%= user_link user %></li>
                <% end %>
              </ul>
            </td>
            <td class="text-center"><%= board.topics.normal.count %></td>
            <td class="text-center"><%= board.posts.normal.count %></td>
            <td class="text-center"><%= time_digest board.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

