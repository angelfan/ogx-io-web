<div class="row">
  <ol class="breadcrumb pull-left">
    <li>boards</li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-10">
    <table class="table table-hover">
      <thead>
      <th>板块</th>
      <th class="text-center" style="width: 100px;">路径</th>
      <th class="text-center" style="width: 130px;">版主</th>
      <th class="text-center" style="width: 70px;">主题数</th>
      <th class="text-center" style="width: 70px;">帖子数</th>
      <th class="text-center" style="width: 110px;">创建时间</th>
      </thead>
      <tbody>
      <% @boards.each do |board| %>
          <tr>
            <td title="<%= board.intro %>">
              <span style="font-size: 16px;"><%= link_to board.name, board_topics_path(board) %></span><br/>
              <%= truncate board.intro, length: 36, omission: '...' %>
            </td>
            <td class="text-center"><%= link_to board.path, board_topics_path(board) %></td>
            <td class="text-center">
              <ul class="list-inline">
                <% board.moderators.each do |user| %>
                    <li><%= user_link user %></li>
                <% end %>
              </ul>
            </td>
            <td class="text-center"><%= board.topics.normal.count %></td>
            <td class="text-center"><%= board.posts.normal.count %></td>
            <td class="text-center"><%= time_digest board.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

